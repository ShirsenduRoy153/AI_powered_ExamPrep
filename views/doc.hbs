    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        $(document).ready(function() {
            const startTime = new Date();

            // Show the modal when the close button is clicked
            document.getElementById("close").addEventListener("click", function() {
                $('#ratingModal').show();
            });

            // Close the modal when the close button in the modal is clicked
            $('.close').click(function() {
                $('#ratingModal').hide();
            });

            // Submit rating when the submit button is clicked
            $('.submit-rating-btn').click(function() {
                const selectedRating = $('#ratingInput').val();
                alert(`Thank you for rating: ${selectedRating}`);

                // Perform your AJAX request here
                const endTime = new Date();
                const totalTimeOnPage = (endTime - startTime) / (1000 * 60);
                const encodedTime = encodeURIComponent(totalTimeOnPage);
                const topic = "{{topic}}";

                $.ajax({
                    type: "POST",
                    url: "/time",
                    data: {
                        topic: topic,
                        rating:  selectedRating,
                        time: encodedTime
                    },
                    success: function(response) {
                        if (response.success == true) {
                            window.location.href = "http://localhost:4500";
                        } else {
                            alert(response.message);
                        }
                    }
                });
            });
        });
    </script>
